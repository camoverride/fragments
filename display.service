[Unit]
Description=fragments
After=default.target

[Service]
Type=simple
Restart=always
WorkingDirectory=/home/cam/fragments
ExecStart=/home/cam/fragments/.venv/bin/python /home/cam/fragments/run_display.py
StandardOutput=journal
StandardError=journal
Environment="PATH=/home/cam/fragments/.venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

[Install]
WantedBy=default.target
